@model IEnumerable<AppUser>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>FullName</th> 
            <th>Email</th>
            <td>
                <a asp-controller="Users" asp-action="Create" class="btn-sm btn-success text-decoration-none">Create User</a>
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary text-decoration-none">Edit</a>
                    <form asp-controller="Users" asp-action="Delete" method="post">
                        <input type="hidden" value="@user.Id" name="id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
